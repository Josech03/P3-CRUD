<%- include('partials/_header'); -%>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-5">
      <div class="card text-white bg-dark mb-3">
        <div class="card-body">
          <form action="/update/<%- data.ID -%>" method="post">
            <h3>Actualizacion de Datos</h3>
            <div class="form-group">
              <input type="text" name="nombre" placeholder="Nombre" class="form-control" value="<%- data.Nombre -%>" onkeypress="return ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122))"  required>
            </div>
            <div class="form-group">
              <input type="text" name="cedula" placeholder="Cedula de Indentidad" class="form-control" value="<%- data.Cedula -%>" onkeypress="return (event.charCode >= 48 && event.charCode <= 57)" required>
            </div>
            <div class="form-group">
              <input type="text" name="peso" placeholder="Peso del Jugador (KG)" class="form-control" value="<%- data.Peso -%>" onkeypress="return (event.charCode >= 48 && event.charCode <= 57)" required>
            </div>
            <div class="form-group">
              <input type="text" name="estatura" placeholder="Estatura del Jugador (CM)" class="form-control" value="<%- data.Estatura -%>" onkeypress="return (event.charCode >= 48 && event.charCode <= 57)" required>
            </div>                        
            <div class="form-group">
              <input type="text" name="posicion" placeholder="Posicion a Jugar" class="form-control" value="<%- data.Posicion -%>" onkeypress="return ((event.charCode >= 65 && event.charCode <= 90) || (event.charCode >= 97 && event.charCode <= 122))"  required>
            </div>
            <div class="form-group">
              <input type="text" name="telefono" placeholder="Telefono" class="form-control" value="<%- data.Telefono -%>" onkeypress="return (event.charCode >= 48 && event.charCode <= 57)">
            </div>
              <button type="submit" class="btn btn-info">
                Actualizar
              </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('partials/_footer'); -%>